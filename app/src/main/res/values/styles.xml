<resources>
    <!-- Hlavní téma aplikace -->
    <style name="Theme.WorkTimeNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primární barvy -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Status bar -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Pozadí aplikace -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Styl pro BottomNavigationView -->
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Barvy textů a ikon -->
        <item name="itemTextColor">@android:color/black</item>
        <item name="itemIconTint">?attr/colorControlNormal</item>
        <!-- Velikost ikon -->
        <item name="itemIconSize">24dp</item>
    </style>
</resources>
